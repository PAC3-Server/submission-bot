{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["ES2020", "WebWorker"],
    "preserveConstEnums": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // that one type missmatch with @types/node ðŸ™„
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ],
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "testing",
  ]
}
